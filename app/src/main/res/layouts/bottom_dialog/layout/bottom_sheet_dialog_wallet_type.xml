<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_dialog_bord"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/select_create_wallet_type"
            android:textColor="?attr/currency_color"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="?attr/line_1"/>

        <RelativeLayout
            android:id="@+id/rl_apply_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:id="@+id/tv_apply_wallet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/application_wallet"
                android:textColor="?attr/font_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_choose_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choose"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_apply_wallet"
                android:layout_marginRight="@dimen/dp_6"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_storage_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:id="@+id/tv_storage_wallet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/storage_wallet"
                android:textColor="?attr/font_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_choose_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choose"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_storage_wallet"
                android:layout_marginRight="@dimen/dp_6"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_ccc" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="@string/confirm"
            android:textColor="?attr/currency_color"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                style="?attr/borderlessButtonStyle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_sheet_wallet_type_bord_2"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/txt_999"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_sure"
                style="?attr/borderlessButtonStyle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/bottom_sheet_wallet_type_bord"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
