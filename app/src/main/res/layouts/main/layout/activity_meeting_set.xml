<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical"
    tools:context=".activity.MeetingSetActivity">

    <include layout="@layout/include_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                app:cardBackgroundColor="?attr/bg_create_meeting_color"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10"
                app:cardMaxElevation="@dimen/dp_10"
                app:contentPadding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_set_host"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="@string/set_host"
                        android:textColor="?attr/font_color"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_member_join_mute"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_member_join_mute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:drawableRight="?attr/icon_in_src"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="right"
                            android:text="@string/set_timeout_open"
                            android:textColor="?attr/font_color"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_member_join_tip_voice"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_mike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_local_recording_permissions"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_recording_permissions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:drawableRight="?attr/icon_in_src"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="right"
                            android:text="@string/set_only_host_record"
                            android:textColor="?attr/font_color"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_open_subtitle"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                app:cardBackgroundColor="?attr/bg_create_meeting_color"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10"
                app:cardMaxElevation="@dimen/dp_10"
                app:contentPadding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_set_personal"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/set_personal"
                        android:textColor="?attr/font_color"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_mine_name"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_mine_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:drawableRight="?attr/icon_in_src"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="right"
                            android:text="ggggg"
                            android:textColor="?attr/font_color"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_mine_header"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_header"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/transfer_accounts_sol"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="@dimen/dp_1"
                            app:civ_circle_background_color="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_open_mike_window"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_window"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_open_subtitle"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_open_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_voice_mode"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_voice_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_video_mirroring"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_video_mirroring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_show_duration"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_show_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_show_bullet_chat"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_show_bullet_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_voice_stimulation"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_voice_stimulation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/set_noise_reduction"
                            android:textColor="?attr/currency_color"
                            android:textSize="@dimen/sp_14" />

                        <Switch
                            android:id="@+id/switch_noise_reduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:thumb="@drawable/switch_white_circle_meeting_selector"
                            android:track="@drawable/switch_selector_meeting_orange" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>