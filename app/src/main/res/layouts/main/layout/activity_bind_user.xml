<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/color_bg_main"
    tools:context=".activity.BindUserActivity">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/ll_invite_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/invite_mobile_ID"
                android:textColor="?attr/currency_color"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_scan_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="?attr/icon_scan_src" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_invite_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textColorHint="?attr/font_2_color"
            android:textColor="?attr/font_color"
            android:textSize="@dimen/sp_14"
            android:hint="@string/hint_invite_mobile_id"
            android:background="@drawable/edit_address_bg_bord"
            android:maxLength="50" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        android:text="@string/My_mobile_ID"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@drawable/edit_address_bg_bord"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="?attr/font_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/my_wallet_address"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/edit_address_bg_bord"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="?attr/font_color"
            android:textColorHint="?attr/font_2_color"
            android:textSize="@dimen/sp_14"
            android:hint="@string/hint_wallet_address"
            android:background="@null"
            android:maxLength="50"/>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="?attr/icon_in_src"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        style="?attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@drawable/bottom_sheet_wallet_manager_bord"
        android:text="@string/bind_now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>