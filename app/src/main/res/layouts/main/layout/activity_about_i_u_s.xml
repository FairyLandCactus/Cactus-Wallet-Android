<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical"
    tools:context=".activity.AboutIUSActivity">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="V1.0.0"
            android:textColor="?attr/font_2_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_26"
            android:text="Cactus"
            android:textColor="#ff5e6172"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_about_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="?attr/font_color"
        android:textSize="@dimen/sp_14"
        android:text="@string/about_us_dec"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_website"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="@string/Website"
            android:textColor="?attr/currency_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_in"
            android:drawablePadding="@dimen/dp_6"
            android:text="https//:www.IUS.com"
            android:textColor="?attr/font_2_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="@string/Mail"
            android:textColor="?attr/currency_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="?attr/icon_in_src"
            android:drawablePadding="@dimen/dp_6"
            android:text="83562485@qq.com"
            android:textColor="?attr/font_2_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_1"
        android:drawableRight="?attr/icon_in_src"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/user_agreement"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_privacy_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_1"
        android:drawableRight="?attr/icon_in_src"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/privacy_agreement"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_1"
        android:drawableRight="?attr/icon_in_src"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/version"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_16" />

</LinearLayout>