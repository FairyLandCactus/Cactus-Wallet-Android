<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical"
    tools:context=".activity.InviteActivity">

    <LinearLayout
        android:id="@+id/ll_share_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="?attr/gamefi_blind_box_src"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/invite_friends"
            android:textColor="?attr/currency_color"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/together"
            android:textColor="?attr/font_2_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_share_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_46"
            android:background="@drawable/gamefi_item_bg_bord"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_copy_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_20"
                android:drawableRight="@mipmap/icon_black_copy"
                android:drawablePadding="@dimen/dp_4"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="http://download.ius.finance/download/app_download.html"
                android:textColor="?attr/font_2_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_android_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:drawableRight="@mipmap/icon_black_copy"
                android:drawablePadding="@dimen/dp_4"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="?attr/font_2_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/scan_install_ius"
                android:textColor="?attr/font_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/share_install_ius"
            android:textColor="?attr/font_color"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_share"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/bottom_sheet_wallet_manager_bord"
            android:text="@string/share_with_your_friends"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>