<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_6"
        android:src="@mipmap/transfer_accounts_sol" />

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:text="SOL"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_type_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_name"
        android:layout_toRightOf="@+id/iv_pic"
        android:text="Solana"
        android:textColor="?attr/font_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_sol_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0.00"
        android:textColor="?attr/currency_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_rmb_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sol_money"
        android:layout_alignParentRight="true"
        android:text="â‰ˆ0.00USDT"
        android:textColor="?attr/font_2_color"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
